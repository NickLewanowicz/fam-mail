/* Fam-Mail Design System - Component Base Styles */

/* Card Component Styles */
.card {
  @apply bg-bg-secondary rounded-lg shadow-md border border-gray-200 transition-shadow duration-200;
}

.card:hover {
  @apply shadow-lg;
}

.card-header {
  @apply px-6 py-4 border-b border-gray-200 bg-bg-tertiary rounded-t-lg;
}

.card-body {
  @apply px-6 py-4;
}

.card-footer {
  @apply px-6 py-4 border-t border-gray-200 bg-bg-tertiary rounded-b-lg;
}

.card-title {
  @apply text-lg font-semibold text-text-primary;
}

.card-subtitle {
  @apply text-sm text-text-secondary mt-1;
}

/* Card Variants */
.card-compact {
  @apply shadow-sm;
}

.card-compact .card-body {
  @apply px-4 py-3;
}

.card-compact .card-header,
.card-compact .card-footer {
  @apply px-4 py-3;
}

.card-elevated {
  @apply shadow-lg border-0;
}

.card-elevated:hover {
  @apply shadow-xl;
}

.card-borderless {
  @apply border-0 shadow-sm;
}

/* Button Component Styles */
.btn {
  @apply inline-flex items-center justify-center gap-2 px-4 py-2 text-sm font-medium rounded-md transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed;
}

.btn:active {
  @apply scale-95;
}

/* Button Sizes */
.btn-xs {
  @apply px-2 py-1 text-xs;
}

.btn-sm {
  @apply px-3 py-1.5 text-sm;
}

.btn-lg {
  @apply px-6 py-3 text-base;
}

.btn-xl {
  @apply px-8 py-4 text-lg;
}

/* Button Variants */
.btn-primary {
  @apply bg-primary-400 text-primary-900 hover:bg-primary-500 focus:ring-primary-400;
}

.btn-primary:active {
  @apply bg-primary-600;
}

.btn-secondary {
  @apply bg-secondary-100 text-primary-900 hover:bg-secondary-200 focus:ring-secondary-400;
}

.btn-secondary:active {
  @apply bg-secondary-300;
}

.btn-ghost {
  @apply text-warmGray-700 hover:bg-warmGray-100 focus:ring-primary-400;
}

.btn-ghost:active {
  @apply bg-warmGray-200;
}

.btn-outline {
  @apply border border-warmGray-300 text-primary-900 bg-secondary-50 hover:bg-secondary-100 focus:ring-primary-400;
}

.btn-outline:active {
  @apply bg-warmGray-100;
}

.btn-success {
  @apply bg-success text-white hover:bg-green-600 focus:ring-success;
}

.btn-success:active {
  @apply bg-green-700;
}

.btn-warning {
  @apply bg-warning text-white hover:bg-yellow-600 focus:ring-warning;
}

.btn-warning:active {
  @apply bg-yellow-700;
}

.btn-error {
  @apply bg-error text-white hover:bg-red-600 focus:ring-error;
}

.btn-error:active {
  @apply bg-red-700;
}

.btn-link {
  @apply text-primary-600 hover:text-primary-700 hover:underline focus:ring-primary-500 p-0;
}

/* Icon Button */
.btn-icon {
  @apply p-2;
}

.btn-icon.btn-xs {
  @apply p-1;
}

.btn-icon.btn-sm {
  @apply p-1.5;
}

.btn-icon.btn-lg {
  @apply p-3;
}

.btn-icon.btn-xl {
  @apply p-4;
}

/* Form Input Styles */
.form-input,
.form-textarea,
.form-select {
  @apply block w-full px-3 py-2 text-sm border border-warmGray-300 rounded-md shadow-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary-400 focus:border-primary-400 disabled:bg-warmGray-100 disabled:cursor-not-allowed;
}

.form-input::placeholder,
.form-textarea::placeholder {
  @apply text-warmGray-500;
}

/* Input Sizes */
.form-input-sm,
.form-textarea-sm,
.form-select-sm {
  @apply px-2 py-1 text-xs;
}

.form-input-lg,
.form-textarea-lg,
.form-select-lg {
  @apply px-4 py-3 text-base;
}

/* Input States */
.form-input.error,
.form-textarea.error,
.form-select.error {
  @apply border-error focus:ring-error focus:border-error;
}

.form-input.success,
.form-textarea.success,
.form-select.success {
  @apply border-success focus:ring-success focus:border-success;
}

.form-input.warning,
.form-textarea.warning,
.form-select.warning {
  @apply border-warning focus:ring-warning focus:border-warning;
}

/* Form Label */
.form-label {
  @apply block text-sm font-medium text-primary-900 mb-1;
}

.form-label.required::after {
  @apply text-error content-['*'] ml-1;
}

/* Form Helper Text */
.form-helper {
  @apply text-xs text-warmGray-600 mt-1;
}

.form-helper.error {
  @apply text-error;
}

.form-helper.success {
  @apply text-success;
}

.form-helper.warning {
  @apply text-warning;
}

/* Checkbox and Radio */
.form-checkbox,
.form-radio {
  @apply w-4 h-4 text-primary-400 border-warmGray-300 rounded focus:ring-primary-400 focus:ring-2;
}

.form-radio {
  @apply rounded-full;
}

/* Checkbox/Radio Container */
.form-checkbox-group,
.form-radio-group {
  @apply space-y-2;
}

.form-checkbox-label,
.form-radio-label {
  @apply flex items-center gap-2 text-sm text-primary-900 cursor-pointer;
}

/* Form Group */
.form-group {
  @apply space-y-1;
}

.form-section {
  @apply space-y-4;
}

/* Loading States */
.loading {
  @apply relative disabled:pointer-events-none;
}

.loading::after {
  @apply absolute inset-0 flex items-center justify-center bg-secondary-50 bg-opacity-75 rounded-md content-[''];
}

.loading-spinner::after {
  @apply absolute inset-0 flex items-center justify-center content-[''];
  background-image: url("data:image/svg+xml,%3Csvg class='animate-spin h-5 w-5 text-primary-600' xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24'%3E%3Ccircle class='opacity-25' cx='12' cy='12' r='10' stroke='currentColor' stroke-width='4'%3E%3C/circle%3E%3Cpath class='opacity-75' fill='currentColor' d='M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z'%3E%3C/path%3E%3C/svg%3E");
  background-repeat: no-repeat;
  background-position: center;
}

/* Skeleton Loading */
.skeleton {
  @apply bg-warmGray-200 animate-pulse rounded;
}

.skeleton-text {
  @apply h-4;
}

.skeleton-text-sm {
  @apply h-3 w-3/4;
}

.skeleton-text-lg {
  @apply h-6 w-2/3;
}

.skeleton-avatar {
  @apply h-10 w-10 rounded-full;
}

.skeleton-button {
  @apply h-10 w-20;
}

.skeleton-card {
  @apply h-32;
}

/* Badge Component */
.badge {
  @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium;
}

.badge-primary {
  @apply bg-primary-200 text-primary-900;
}

.badge-secondary {
  @apply bg-secondary-200 text-primary-900;
}

.badge-success {
  @apply bg-green-100 text-success;
}

.badge-warning {
  @apply bg-warning-light text-warning;
}

.badge-error {
  @apply bg-error-light text-error;
}

.badge-outline {
  @apply border border-warmGray-300 text-primary-900 bg-transparent;
}

/* Alert Component */
.alert {
  @apply p-4 rounded-md;
}

.alert-info {
  @apply bg-info-light text-info border border-info;
}

.alert-success {
  @apply bg-success-light text-success border border-success;
}

.alert-warning {
  @apply bg-warning-light text-warning border border-warning;
}

.alert-error {
  @apply bg-error-light text-error border border-error;
}

.alert-title {
  @apply font-semibold mb-1;
}

/* Progress Bar */
.progress {
  @apply w-full bg-warmGray-200 rounded-full h-2;
}

.progress-bar {
  @apply bg-primary-400 h-2 rounded-full transition-all duration-500;
}

.progress-bar.success {
  @apply bg-success;
}

.progress-bar.warning {
  @apply bg-warning;
}

.progress-bar.error {
  @apply bg-error;
}

/* Container */
.container {
  @apply max-w-container-xl mx-auto px-4 sm:px-6 lg:px-8;
}

.container-sm {
  @apply max-w-container-sm mx-auto px-4;
}

.container-md {
  @apply max-w-container-md mx-auto px-4 sm:px-6;
}

.container-lg {
  @apply max-w-container-lg mx-auto px-4 sm:px-6;
}

.container-xl {
  @apply max-w-container-xl mx-auto px-4 sm:px-6 lg:px-8;
}

.container-2xl {
  @apply max-w-container-2xl mx-auto px-4 sm:px-6 lg:px-8;
}

/* Section Spacing */
.section {
  @apply py-12 md:py-16;
}

.section-sm {
  @apply py-8 md:py-12;
}

.section-lg {
  @apply py-16 md:py-24;
}

/* Divider */
.divider {
  @apply border-t border-warmGray-200;
}

.divider-vertical {
  @apply border-l border-warmGray-200 h-full;
}

/* Responsive Grid System */
.grid-auto-fit {
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
}

.grid-auto-fill {
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
}

/* Text Utilities */
.text-gradient {
  @apply bg-gradient-to-r from-primary-400 to-secondary-300 bg-clip-text text-transparent;
}

.text-balance {
  text-wrap: balance;
}

/* Hover Utilities */
.hover-lift {
  @apply transition-transform duration-200 hover:-translate-y-1;
}

.hover-scale {
  @apply transition-transform duration-200 hover:scale-105;
}

/* Focus Utilities */
.focus-ring {
  @apply focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2;
}

/* Status Indicators */
.status-dot {
  @apply inline-block w-2 h-2 rounded-full mr-2;
}

.status-online {
  @apply bg-success;
}

.status-offline {
  @apply bg-warmGray-400;
}

.status-busy {
  @apply bg-warning;
}

.status-error {
  @apply bg-error;
}